{
    "include": [
        "./src/**/*.ts",
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2020",
        "moduleResolution":"node",
        "paths": {
            "*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/shared/assets/*"
            ],
            "@styles/*": [
                "./src/shared/styles/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@partials/*": [
                "./src/shared/partials/*"
            ],
        }
    }
}
