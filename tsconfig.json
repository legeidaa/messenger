{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "ESNext",
            "DOM",
            "dom.iterable"
        ],
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "strictPropertyInitialization": false,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/shared/assets/*"
            ],
            "@styles/*": [
                "./src/shared/styles/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@partials/*": [
                "./src/shared/partials/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
            "@widgets/*": [
                "./src/widgets/*"
            ],
        }
    },
}